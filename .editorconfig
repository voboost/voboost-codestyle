# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Indentation for Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 4

# ktlint-specific rules for Kotlin
[*.{kt,kts}]
# Disable trailing comma rules (more conservative approach)
ij_kotlin_allow_trailing_comma_on_call_site = false
ij_kotlin_allow_trailing_comma = false

# Import ordering
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^

# Line length
max_line_length = 120

# Disable problematic rules for Compose and BEM naming
ktlint_standard_function-naming = disabled
ktlint_standard_filename = disabled

# Other Kotlin formatting rules
ij_kotlin_align_multiline_parameters = false
ij_kotlin_align_multiline_parameters_in_calls = false
ij_kotlin_assignment_wrap = normal
ij_kotlin_call_parameters_wrap = normal
ij_kotlin_call_parameters_lparen_on_next_line = false
ij_kotlin_call_parameters_rparen_on_next_line = false
ij_kotlin_method_parameters_wrap = normal
ij_kotlin_method_parameters_lparen_on_next_line = false
ij_kotlin_method_parameters_rparen_on_next_line = false

# XML files (Android layouts, manifests)
[*.xml]
indent_style = space
indent_size = 4

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

[*.gradle.kts]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Java files
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# Java-specific formatting
ij_java_align_multiline_parameters = false
ij_java_align_multiline_parameters_in_calls = false
ij_java_call_parameters_wrap = normal
ij_java_method_parameters_wrap = normal
ij_java_binary_operation_wrap = normal
ij_java_assignment_wrap = normal
ij_java_ternary_operation_wrap = normal

# Import organization for Java
ij_java_imports_layout = *,|,javax.**,java.**,|,android.**,androidx.**,|,com.**,|,org.**,|,$*
ij_java_use_single_class_imports = true
ij_java_use_fq_class_names = false

# Braces and spacing
ij_java_brace_style = end_of_line
ij_java_class_brace_style = end_of_line
ij_java_method_brace_style = end_of_line
ij_java_space_before_method_parentheses = false
ij_java_space_before_if_parentheses = true
ij_java_space_before_for_parentheses = true
ij_java_space_before_while_parentheses = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

